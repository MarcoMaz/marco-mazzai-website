---
import { getEntry } from 'astro:content';

const footer = await getEntry('copy', 'footer');

if (!footer) {
  throw new Error('Footer not found in copy collection');
}

const {
  headline,
  CTA: { label, url },
} = footer.data;

const currentYear = new Date().getFullYear();
---

<footer class='footer-section' id='contact'>
  <h2 class='heading'>{headline}</h2><a
    href={url}
    target='_blank'
    class='external-link'>{label}</a
  >
  <p>&copy; {currentYear} Marco Mazzai. All rights reserved.</p>
</footer>
