---
interface ProjectIFrameProps {
  height?: string;
  src: string;
  width?: string;
}

const {
  height = '600px',
  width = '100%',
  src,
} = Astro.props as ProjectIFrameProps;

if (!src) throw new Error('ProjectIframe: "src" prop is required');
---

<iframe
  src={src}
  width={width}
  height={height}
  style='border: 1px solid #ccc; border-radius: 4px;'
  allowfullscreen></iframe>
