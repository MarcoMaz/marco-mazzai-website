---
import { getCollection } from 'astro:content';

const navigationCollection = await getCollection('navigation');

if (navigationCollection.length === 0) {
  throw new Error('Navigation not found in copy collection');
}

const nav = navigationCollection[0];

const items = nav.data.items;
---

<nav>
  <ul>
    {
      items.map(
        ({
          url,
          label,
        }: {
          url: string | URL | null | undefined;
          label: unknown;
        }) => (
          <li>
            <a href={url}>{label}</a>
          </li>
        )
      )
    }
  </ul>
</nav>
